<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_top_corner_8">

        <ImageView
            android:id="@+id/iv_my_page_bottom_sheet_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:padding="2dp"
            android:src="@drawable/ic_complaint_delete_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_my_page_bottom_sheet_edit_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_gray03_line_6_rect"
            android:backgroundTint="@color/gray_1"
            android:drawablePadding="20dp"
            android:paddingHorizontal="22dp"
            android:paddingVertical="18dp"
            android:text="@string/my_page_profile_edit"
            android:textAppearance="@style/TextAppearance.DontBe.body_semi_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_my_page_bottom_sheet_close" />

        <TextView
            android:id="@+id/tv_my_page_bottom_sheet_account_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_gray03_line_6_rect"
            android:backgroundTint="@color/gray_1"
            android:drawablePadding="20dp"
            android:paddingHorizontal="22dp"
            android:paddingVertical="18dp"
            android:text="@string/bottom_sheet_my_page_account_info"
            android:textAppearance="@style/TextAppearance.DontBe.body_semi_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_my_page_bottom_sheet_edit_profile" />

        <TextView
            android:id="@+id/tv_my_page_bottom_sheet_push_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_gray03_line_6_rect"
            android:backgroundTint="@color/gray_1"
            android:drawablePadding="20dp"
            android:paddingHorizontal="22dp"
            android:paddingVertical="18dp"
            android:text="@string/bottom_sheet_my_page_push_alarm"
            android:textAppearance="@style/TextAppearance.DontBe.body_semi_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_my_page_bottom_sheet_account_info" />

        <TextView
            android:id="@+id/tv_my_page_bottom_sheet_feedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_gray03_line_6_rect"
            android:backgroundTint="@color/gray_1"
            android:drawablePadding="20dp"
            android:paddingHorizontal="22dp"
            android:paddingVertical="18dp"
            android:text="@string/bottom_sheet_my_page_feedback"
            android:textAppearance="@style/TextAppearance.DontBe.body_semi_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_my_page_bottom_sheet_push_alarm" />

        <TextView
            android:id="@+id/tv_my_page_bottom_sheet_custom_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_gray03_line_6_rect"
            android:backgroundTint="@color/gray_1"
            android:drawablePadding="20dp"
            android:paddingHorizontal="22dp"
            android:paddingVertical="18dp"
            android:text="@string/bottom_sheet_my_page_customer_service"
            android:textAppearance="@style/TextAppearance.DontBe.body_semi_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_my_page_bottom_sheet_feedback" />

        <TextView
            android:id="@+id/tv_my_page_bottom_sheet_logout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_gray03_line_6_rect"
            android:backgroundTint="@color/gray_1"
            android:drawablePadding="20dp"
            android:paddingHorizontal="22dp"
            android:paddingVertical="18dp"
            android:text="@string/bottom_sheet_my_page_logout"
            android:textAppearance="@style/TextAppearance.DontBe.body_semi_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_my_page_bottom_sheet_custom_service" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
