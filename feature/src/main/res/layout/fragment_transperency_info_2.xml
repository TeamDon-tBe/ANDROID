<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="12dp">

        <ImageView
            android:id="@+id/iv_transparency_info_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="28dp"
            android:contentDescription="@string/content_description_iv_onboarding_third"
            android:src="@drawable/img_transparency_info_2"
            app:layout_constraintDimensionRatio="272:159"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_onboarding_second_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="게시글의 투명도 주기 버튼을 클릭하면,"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.DontBe.head_semi_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_transparency_info_1" />

        <TextView
            android:id="@+id/tv_transparency_info_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="36dp"
            android:maxLines="2"
            android:text="해당 유저가 작성한 모든 게시글, 답글이 -1%씩 점점 투명해지고, 모두에게 투명도가 적용되어 보여져요."
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.DontBe.body_regular_14"
            android:textColor="@color/gray_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_onboarding_second_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
