<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="12dp">

        <ImageView
            android:id="@+id/iv_transparency_info_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="28dp"
            android:src="@drawable/img_transparency_info_5"
            app:layout_constraintBottom_toTopOf="@id/tv_onboarding_second_title"
            app:layout_constraintDimensionRatio="272:159"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_onboarding_second_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="투명도 적용은 5일간 지속돼요."
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.DontBe.head_semi_18"
            app:layout_constraintBottom_toTopOf="@id/tv_transparency_info_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_transparency_info_3" />

        <TextView
            android:id="@+id/tv_transparency_info_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="투명도는 최근 5일 동안 버튼이 적용된 내용을 반영해요. 5일이 지나면 적용되었던 투명도가 다시 회복돼요."
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.DontBe.body_regular_14"
            android:textColor="@color/gray_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_onboarding_second_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
