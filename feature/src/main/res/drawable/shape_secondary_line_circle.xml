<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">

            <stroke
                android:width="2dp"
                android:color="@color/secondary" />
            <size
                android:width="22dp"
                android:height="22dp" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:end="4dp"
        android:start="4dp"
        android:top="4dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/secondary" />
        </shape>

    </item>

</layer-list>